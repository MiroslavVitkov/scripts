# In this file:
#                  - utility bash functions


# Create a local directoey and change into it.
function mkd
{
    mkdir "$1"
    cd "$1"
}


# Discard the current directory if empty.
function rmd
{
    cd ..
    rmdir "$OLDPWD"
}


# Execute a program and don't care about parent shell or output.
function run
{
    cd /tmp
    nohup "$@" &
    cd -
}

function myfind
{
    find / -name "$1" 2>/dev/null
}
