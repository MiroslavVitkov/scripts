#!/usr/bin/env bash

# In this file:
#                 - minor modifications to some GNU tools


alias la="ls -a"
alias ll="ls -l"
alias l="ls"

alias nano="nano --guidestripe 80 --emptyline --linenumbers -s aspell --nohelp"
alias see='nano --view'
alias rat="~/proj/rat/python/rat.py"

# SSDs make searching the entire filesystem trivial.
alias edit="nano $(find / -name $1 2>/dev/null)"
